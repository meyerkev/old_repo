	Function ConvertY(y As Decimal) As Integer
		While y> rows +.5
			y -= rows
		End While
		While y <=.5
			y += rows
		End While
		Return (y * CellSize) - CellSize+2 + 50 + (screenHeight()-50)/2 - cellsize*rows/2.0
