			Print(p.health +" ")
			setPlayerSpeed(p)
		End If
	End Method
	
	Method setPlayerSpeed(p As player)
		If character.health > 65 Then
			p.playerspeed = .33
		Else If character.health >=35 Then
			p.playerspeed = .25
		Else 
			p.playerSpeed = .2
		End If
		//p.changepos(round(p.xpos/p.playerSpeed) * p.playerSpeed, round(p.ypos/p.playerSpeed) * p.playerSpeed)
	End Method
	
	Function intersectsPlayerEnemy(g As enemy) As Boolean

		Define x As Decimal = character.xpos//boom
		Define y As Decimal = character.ypos//boom
		If abs(x-g.xpos) < 1 And abs(y-g.ypos)< 1 Then
			Return True
		End If
		Return False
	End Function
End Program