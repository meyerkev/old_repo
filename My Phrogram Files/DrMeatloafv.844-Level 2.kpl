	Method RunGame()
		//(15Oct09,Boshen)created controls
		//(15Oct09, Kevin)edited for wraparound
		//(16Oct09, Kevin)altered for new player decimal and direction format
		currentLevel = level1
		While Not iskeydown(escape) And Not IsCaught And Not hasWon 
			If isKeyDown("p") And paused Then
				paused = False
				clearKeyboardevents()
			Else If isKeyDown("p")Then
				paused = True
				found.Stop()
				caught2.Stop()
				clearKeyboardevents()
			End If
			iskeydown("p") = False
			If Not paused Then
				MovePlayer(character)
				Define c As Int
				For c = 1 To arraylength(currentLevel.enemyset)
					moveEnemy(level1.enemyset[c])
					caught(c, character)
				Next	
				//delay(85)
				scrollGame()
				checkGoodFoodIntersection(character)
				//displayGame()
				updateContainsEnemy()
				haswon = IsComplete()
				//DisplayGame()
				
				//Print(character.health +" ")
			End If
			delay(50)
			//clearKeyboardevents()
		End While
		
	End Method	
	

	
	
