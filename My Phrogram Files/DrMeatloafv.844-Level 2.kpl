	//(26Oct09, Boshen) just displays a simple red bar showing how much health you have
	Class healthbar
		Define width As Integer = 300
		Define x As Integer = screenwidth()- 350
		Define y As Integer = 0
		Define height As Integer = 25
		
		Method loadbar()
			pen(False)
			moveto(x,y)
			pen(True)
			moveto(x+width,y)
			moveto(x+width,y+height)
			moveto(x,y+height)
			moveto(x,y)
		End Method
		Function converthp(health As Integer) As Decimal
			Define hp As Decimal
			hp = health
			hp=hp/100.0
			Return hp
		End Function
		Method draw(hp As Decimal)
			pen(False)
			moveto(x+1,y+1)
			If hp > .65 Then
				color(green)
			Else If hp >=.35 Then
				color(yellow)
			Else
				color(red)
			End If
			
			rectangle((hp*width)-2,height-2,True)
			color(black)
		End Method
	End Class
	
