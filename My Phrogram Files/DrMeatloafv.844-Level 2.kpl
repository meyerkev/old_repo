	Function ConvertX(x As Decimal) As Integer
		While x> columns +.5
			x -= columns
		End While
		While x <=.5
			x += columns
		End While
		Return (x * CellSize) - CellSize+2 + (screenwidth())/2 - cellsize*columns/2.0
